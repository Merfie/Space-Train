# Initialization

at_rest:
    main: sit
    levity: stand_front

speaking:
    main: sit
    levity: stand_right

variables:
    bean_hate: false

# States

start:
    - give: space_bucks
    - levity: Excuse me miss, would you like anything to eat or drink?
    - goto: food_choice

food_choice:
    - choice:
        I'd love a delicious snack!:
          hide_after_use: true
          goto: ask_for_food

ask_for_food:
    - main: Yes please! I'll have some Tasty Nuts and a lemonade.
    - give: tasty_nuts
    - give: lemonade
    - levity: Here you go.
    - levity: Oh, I see you're reading "Motherland Poems Monthly!"
    - main: Yes, I just love Stanislov Slavinsky's series about comets this month! I'm traveling now to see him read in [Space France].
    - levity: Lucky woman! I love Stanislov's work as well.
    - levity: Enjoy your Tasty Nuts!